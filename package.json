{
    "name": "dof",
    "description": "Depth-of-field calculator for comparing camera lenses",
    "version": "2.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/patik/dof.git"
    },
    "devDependencies": {
        "@jest/globals": "^29.3.1",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.28.0",
        "jest": "^29.3.1",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.21",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "bugs": {
        "url": "https://github.com/patik/dof/issues"
    },
    "homepage": "https://github.com/patik/dof",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "build": "yarn lint && tsc",
        "clean": "rm -rf ./.nyc_output; rm -rf ./coverage; rm -rf ./dist; rm -rf ./node_modules",
        "cover": "nyc yarn test",
        "cover:check": "nyc --check-coverage yarn test",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
        "preversion": "yarn build && yarn cover:check",
        "postversion": "git push && git push --tags",
        "test": "jest",
        "upgrade": "npx npm-check -u",
        "version": "yarn build && yarn changelog:update"
    },
    "keywords": [
        "depth-of-field",
        "lens",
        "camera",
        "sensor",
        "calculator",
        "focal-length",
        "photography"
    ],
    "author": {
        "name": "Craig Patik",
        "email": "craig@patik.com",
        "url": "http://patik.com"
    },
    "license": "BSD-3-Clause"
}
