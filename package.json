{
    "name": "@patik/dof",
    "private": true,
    "workspaces": [
        "app"
    ],
    "scripts": {
        "build": "yarn --cwd app lint && yarn --cwd app tsc",
        "clean": "git clean -fdx",
        "cover": "yarn --cwd app test --collectCoverage",
        "lint": "yarn --cwd app eslint --ext .ts --fix src/**/*.ts",
        "preversion": "yarn --cwd app build && yarn --cwd app cover:check",
        "postversion": "git push && git push --tags",
        "test": "yarn workspaces run test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/patik/dof.git"
    }
}
