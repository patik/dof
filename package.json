{
    "name": "@patik/dof",
    "description": "Depth-of-field calculator for comparing camera lenses",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/patik/dof.git"
    },
    "files": [
        "dist/"
    ],
    "workspaces": [
        "app",
        "package"
    ],
    "scripts": {
        "build": "yarn workspaces build",
        "clean": "yarn workspaces clean",
        "cover": "yarn --cwd package cover",
        "lint": "yarn workspaces lint",
        "preversion": "yarn --cwd package preversion",
        "postversion": "git push && git push --tags",
        "test": "yarn workspaces test"
    }
}
